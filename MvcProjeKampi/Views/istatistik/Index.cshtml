
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<br />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>İstatistikler</h2>
<br />
<div class="col-md-2">
    <div class="card text-white bg-danger mb-4 " style="width: 200px; height:100px">
        <div class="card-body">
            <h5 class="card-title">Toplam Kategori Sayısı</h5>
            <br />
            <h5 class="info-box-number"> @ViewBag.qCategoryCount</h5>
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="card text-white bg-secondary mb-4 " style="width: 200px; height:100px;margin-left:10px">
        <div class="card-body">
            <h5 class="card-title">Yazılım Kategorisi Başlık Sayısı</h5>
            <br />
            <h5 class="info-box-number"> @ViewBag.qSoftwareCategoryTitleCount</h5>
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="card text-white bg-green mb-4 " style="width: 200px; height:100px;margin-left:20px">
        <div class="card-body">
            <h5 class="card-title">A Harfi Geçen Yazar Sayısı</h5>
            <br />
            <h5 class="info-box-number"> @ViewBag.qAwriterCount</h5>
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="card text-white bg-gradient-orange mb-4 " style="width: 200px; height:100px;margin-left:30px">
        <div class="card-body">
            <h5 class="card-title">En fazla başlığa sahip kategori adı</h5>
            <br />
            <h5 class="info-box-number"> @ViewBag.qHasMoreTitle</h5>
        </div>
    </div>
</div>
<div class="col-md-2">
    <div class="card text-white bg-gradient-lightblue mb-4 " style="width: 200px; height:100px;margin-left:40px">

        <div class="card-body">
            <h5 class="card-title">Kategori Durumları Arasındaki Fark</h5>
            <br />
            <h5 class="info-box-number"> @ViewBag.variationTrueBtwFalse</h5>
        </div>
    </div>
</div>

